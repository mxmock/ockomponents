    "@testing-library/react": "~15.0.2",
    "@types/node": "~20.12.7",
    "@vitejs/plugin-react": "~4.2.1",
    "esbuild": "~0.20.2",
    "esbuild-plugin-static-react": "~1.0.0",
    "jsdom": "~24.0.0",
    "typescript": "~5.4.5",
    "vitest": "~1.5.0"
  },
  "dependencies": {
    "@types/react": "~18.2.78",
    "@types/react-dom": "~18.2.25",
    "react": "~18.2.0",
    "react-dom": "~18.2.0",
    "react-icons": "~5.0.1"
  }
